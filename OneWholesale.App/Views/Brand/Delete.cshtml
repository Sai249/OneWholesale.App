@model OneWholesale.Model.Models.Brand

@{
    ViewData["Title"] = "Delete Brand";
}

<h2>Are you sure you want to delete this brand?</h2>

<p><strong>Brand Name:</strong> @Model.BrandName</p>

@if (!string.IsNullOrEmpty(Model.CompanyLogo))
{
    <img src="@Url.Content(Model.CompanyLogo)" width="100" />
}
else
{
    <p>No Logo Available</p>
}

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="BrandList" class="btn btn-secondary">Cancel</a>
</form>
